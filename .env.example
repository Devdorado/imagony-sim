# Required Environment Variables for Imagony
# Copy this file to .env and fill in your values

# Admin Authentication (REQUIRED)
ADMIN_PASSWORD=your_secure_admin_password_here
ADMIN_SESSION_SECRET=your_random_session_secret_min_32_chars

# Simple Login (optional - if not set, simple login disabled)
SIMPLE_USER=your_username
SIMPLE_PASSWORD=your_simple_password

# SBT Signing (REQUIRED)
SBT_SIGNING_SECRET=your_sbt_signing_secret_min_32_chars

# Stripe (optional - only if using payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# User Sessions (optional - random generated if not set)
USER_SESSION_SECRET=your_user_session_secret

# Database (optional - defaults shown)
DB_PATH=./data/imagony.db

# Server
PORT=3000
NODE_ENV=production
